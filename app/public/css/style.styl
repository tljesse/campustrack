raiseText()
	color grey
	text-shadow  -1px 1px 0 white
	-moz-text-shadow  -1px 1px 0 white
	-webkit-text-shadow  -1px 1px 0 white

body 
	margin  0
	padding  0
	height  100%
	//background rgb(52,96,141)

.navbar-default
	background-color #f8f8f8

.navbar
	height 50px
	margin-bottom 0
	transition color 1s

.nav a:hover
	transition color 1s
	text-decoration none

.navbar-brand > img
	content url("/img/logo.png")
	max-height 50px
	overflow visible
	padding-top 0
	padding-bottom 0 

.navbar-brand
	padding-top 0
	padding-bottom 0

#map
	position absolute
	top 50px
	bottom 0
	width 100%
	z-index 1

.info, .tooltip
	position absolute
	top 80px
	right 10px
	z-index 2

.info div
	background #fff
	padding 10px
	border-radius 3px

.name
	margin-top 0

h1.index, .wrapper p
	font-family Candara,Calibri,Segoe,"Segoe UI",Optima,Arial,sans-serif
	font-weight lighter
	line-height 180%
	padding 100px 0

.wrapper-user
	background-color #41616C

.wrapper p
	font-size 24px

.home-jt:before
	background-image url("/img/OSUcampus.jpg")
	height 600px
	
.about-jt:before
	background-image url("/img/knowledge.jpg")
	height 450px

.jumbotron
	background-color black
	box-shadow 10% 0 20px -4px white inset, -20px 0 8px -4px white inset
	height 600px
	margin-top 50px

.about-jt
	height 450px

.jumbotron:before
	content ''
	display block
	position absolute
	left 0
	top 50px
	width 100%
	z-index 1
	opacity 0.6
	background-repeat no-repeat
	background-position 50% 40%
	-ms-background-size cover
	-o-background-size cover
	-moz-background-size cover
	-webkit-background-size cover
	background-size cover

.jumbotron h1
	color #ffffff
	z-index 2
	position relative
	padding 0 0

.vertical-center
	display flex
	align-items center

.page-header
	border-bottom-color grey

h1 > span
	font-weight bold

span.italic
	font-style italic

// shared well rule can be overridden //

.well
	margin-left 0
	border 1px solid #CCC
	min-height 330px
	
// login form //

#login-container
	width 340px
	height 330px
	margin 160px auto
	label
		margin 15px 5px 5px 5px
	button
		width 150px
		padding 6px 40px 6px 40px
		float left
		margin-top 15px
	.checkbox
		margin 23px 0 0 160px
	.check
		margin 5px 0 0 10px
	.btm-links
		text-align center
		margin 20px 0 20px 0
	#create-account
		float right
		margin-right 13px
	#forgot-password
		float left
		margin-left 10px

// account form on signup & home page //

#account-form-container
	width 460px
	margin 100px auto
#country-list
	width 310px
.modal-form-errors li
	raiseText()
	color #D8000C
.control-group
	padding-top 20px

// retrieve password window //

.modal-single-input
	width 452px
	height 300px
	margin -200px 0 0 -232px
	form
		raiseText()
		margin-bottom 0
		#cancel
			right 110px
		#submit
			float:right
	.well
		height 200px
	.modal-body
		height:30%
	.modal-footer
		clear:both
		height 20px
		button
			width 80px
			margin-top -4px
			margin-right 2px

.modal-alert
	width 400px
	height 250px
	margin -125px 0 0 -200px

.modal-form-errors
	width 400px
	max-height 330px
	margin -125px 0 0 -200px

.modal
	background #E0E0E0
	position absolute
	top 50%
	left 50%

// logged-in page //

#btn-logout
	width 120px
	top 1px
	right 8px
	position absolute

// support pages //

#print
	padding 20px
#four04
	padding 20px

// general shared rules //

.clear-fix
	clear both

.form-horizontal
	.control-label
		width 80px
	.form-buttons
		float right
		margin-right 30px
		.btn
			width 80px
			margin-left 8px
	input
		width 300px
	.name
		width 180px
.controls
		margin-left 20px
label
	raiseText()
.subheading
	raiseText()
	margin-top 3px
button i
	padding-left 8px

