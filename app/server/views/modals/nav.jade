div.nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
  div.container
    div.navbar-header
      button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='#')
        img.img-responsive(alt='Campus Track')
    div#navbar.navbar-collapse.collapse
      ul.nav.navbar-nav
        li#home
          a(href='/') Home
        li#about
          a(href='/about') About Us
        li#demo
          a(href='/demo') Demo
        li#contact
          a(href='/contact') Contact
      ul.nav.navbar-nav.navbar-right
        li.dropdown
          a.dropdwon-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false') Account 
            span.caret
          ul.dropdown-menu
            if locals.name
              li#details
                a(href='/account') Account Details
              li#livedemo
                a(href='/accountDemo') Account Demo
              li.divider
              li#logout
                a#logout-btn(href='') Sign Out
            else
              li#login
                a(href='/login') Login
              li#register
                a(href='/signup') Register
        li.username
          a= name

script.
  $(document).ready(function () {
    $.each($('#navbar').find('li'), function() {
        $(this).toggleClass('active',
            $(this).find('a').attr('href') == window.location.pathname);
    });
  });

  $("nav.navbar-fixed-top").autoHidingNavbar();